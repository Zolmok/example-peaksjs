{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "checkJs": true,
    "lib": ["dom", "es2017"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noEmit": true,
    "resolve": {
      "extensions": [".js", ".jsx", ".json"],
      "modules": ["src", "node_modules"]
    },
    "resolveJsonModule": true,
    "target": "esnext",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./**/*"]
}